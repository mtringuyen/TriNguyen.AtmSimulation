@using TriNguyen.AtmSimulation.Core.Entities
@model TriNguyen.AtmSimulation.Web.ApiModels.TransactionDTO
@{
    ViewData["Title"] = "Transfer to account";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-controller="Home" asp-action="DoTransfer" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                @Html.Hidden("Id")
                <div class="form-group">
                    <label asp-for="Amount"></label>
                    <input asp-for="Amount" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Accounts"></label>
                    @Html.DropDownListFor(x => Model.ToAccountid, new SelectList(Model.Accounts, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "ToAccountid" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </section>
    </div>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}